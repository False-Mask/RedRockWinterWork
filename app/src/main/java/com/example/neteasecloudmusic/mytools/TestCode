var sendNetRequest= SendNetRequest()

        sendNetRequest.sendPostRequest("https://www.wanandroid.com/user/login"
                    ,"username=tuzhiqiang&password=123456",object : SendNetRequest.Back{
                override fun onResponded(resultBody: String) {
                    Log.d(TAG, "onResponded: ")
                    var gson=Gson()
                    var data=gson.fromJson<FastJsonData>(resultBody, FastJsonData::class.java)

                }

                override fun onFailed(respondCode: Int) {
                    Log.d(TAG, "onFailed: ")
                }

            })

        sendNetRequest.sendGetRequest("https://wanandroid.com/wxarticle/chapters/json", object : SendNetRequest.Back{
            override fun onResponded(resultBody: String) {
                Log.d(TAG, "onResponded: ")
                var gson=Gson()
                var x=gson.fromJson<getsData>(resultBody,getsData::class.java)
            }

            override fun onFailed(respondCode: Int) {
                Log.d(TAG, "onFailed: ")
            }

        })






