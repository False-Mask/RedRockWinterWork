<?xml version="1.0" encoding="utf-8"?>
<resources>
    自定义的播放暂停键有进度显示
    <declare-styleable name="PlayPauseBar">

        <!--        加载完成或者还没加载的歌曲属性-->
        <attr name="outer_circle_size" format="dimension"/>
        <attr name="outer_circle_color" format="color"/>


        <!--        加载歌曲时候的view属性-->
        <attr name="loading_circle_size" format="dimension"/>
        <attr name="loading_circle_color" format="color"/>

        <!--        播放时候的bar的进度条view属性-->
        <attr name="play_bar_size" format="dimension"/>
        <attr name="play_bar_color" format="color"/>

        <!--        暂停键的属性-->
        <!--        width是暂停键的竖线的宽度-->
        <!--        height是暂停键的高度-->
        <attr name="pause_icon_color" format="color"/>

        <!--        播放键的属性(size是播放键内等边3角的边长)-->
        <attr name="play_icon_color" format="color"/>


    </declare-styleable>

    <declare-styleable name="NextSongIcon">
        <attr name="press_color" format="color"/>
        <attr name="normal_color" format="color"/>
        <attr name="direction_right" format="boolean"/>
    </declare-styleable>


<!--    自定义的播放暂停按钮 (没有进度显示)-->
    <declare-styleable name="PlayPauseIcon">
        <attr name="press_color"/>
        <attr name="normal_color"/>
        <attr name="loading_circle_color"/>
    </declare-styleable>

</resources>